<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/normal_100">

    <TextView
        android:id="@+id/makePhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_300"
        android:background="@drawable/selectable_item_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/normal_100"
        android:text="@string/make_a_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_item_size" />

    <TextView
        android:id="@+id/chooseFromGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_300"
        android:background="@drawable/selectable_item_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/normal_100"
        android:text="@string/choose_from_gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_item_size" />

</androidx.appcompat.widget.LinearLayoutCompat>